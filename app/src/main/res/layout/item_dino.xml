<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:id="@+id/dinoClick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
            android:id="@+id/dino_ImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher_round"/>
    <LinearLayout
            android:id="@+id/dinoLinear"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:layout_toEndOf="@+id/dino_ImageView"
    android:orientation="vertical">

        <TextView
        android:id="@+id/dino_title_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/dino_colot_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDinoColor"
        android:layout_below="@+id/dino_title_TextView"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dino_colot_textView"

                android:id="@+id/dino_birthdate_TextView"/>
        <TextView
                android:id="@+id/dino_about_TextView"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>


    </LinearLayout>
</RelativeLayout>